<div class="col-7">
	<%= turbo_frame_tag dom_id(@tournament) do %>
		<div class="some_container_id"></div>
	<%end%>

	<% if @tournament.status == false %>
		<% classes_status_closed = 'btn btn-info disabled' %>
		<% disabled_status_closed = true %>
	<% else %>
		<% classes_status_closed = 'text-decoration-none text-black likes' %>
		<% disabled_status_closed = false %>
	<% end %>

	<div class= "tours py-4 px-3">
		<div class="flex-shrink-0">
			<%= @tournament.name %>
		</div>
		<div class="">
			<p class="mb-0">
				<span class="fw-bolder"><%= %></span> 
				<span class="text-muted">
					@<%= @tournament.status == true ? "Tournament is opened" : "Tournament is closed" %> Created on <%= @tournament.created_at_time %></span>
			</p>

			<p><%=  %></p>

			<div class = "d-flex justify-content-between align-items-center action-links">
				<div> 
				<span style="font-size: 13px;">Beginner <%= @tournament.registrations.where(level_registration: "level_1", waitlisted: false).count%></span>
				</div>
				<div>
				<span style="font-size: 13px;">Medium <%= @tournament.registrations.where(level_registration: "level_2", waitlisted: false).count%></span>
				</div>
				<div>
				<span style="font-size: 13px;">MediumPlus <%= @tournament.registrations.where(level_registration: "level_3", waitlisted: false).count%></span>
				</div>
				<div>
				<span style="font-size: 13px;">Expert <%= @tournament.registrations.where(level_registration: "level_4", waitlisted: false).count%></span>
				</div>
				<div>
				<span style="font-size: 13px;">WaitListed <%= @tournament.registrations.where(waitlisted: true).count%></span>
				</div>
			</div>
		</div>
		
	</div>
		<br>
		<center>
		<% @groups_with_matches.each_with_index do |(group, matches), index| %>
			<%= turbo_frame_tag "group_#{group.id}" do %>
				<h7>Group <%= (index + 'A'.ord).chr + " "+ group.id.to_s %></h7>
				<% if current_user.admin? %>
					<%= link_to group_path(group), method: :delete, data: { turbo_method: :delete }, class: "btn btn-sm float-end", style: "font-size: 7px;" do %>
						<%= image_tag "cross-button.png", width: "17" %>
					<% end %>
				<% end %>
		
				<%= form_tag update_scores_group_group_path(group), method: :post, remote: true do %>
					<table class="tournament-table">
						<thead>
							<tr>
								<th>nr.</th>
								<th>id</th>
								<th style="min-width: 150px;">Match</th>
								<th>Score</th>
								<th>Date</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
						<% matches.each_with_index do |match, match_index| %>
							<tr>
								<td><%= match_index + 1 %></td>
								<td><%= match.id %></td>
								<td><%= "#{Registration.find(match.first_player).user.username} vs #{Registration.find(match.second_player).user.username}" %></td>
								<% if current_user.admin? %>
									<td><%= text_field_tag "match_scores[#{match.id}]", match.score, disabled: false %></td>
								<% else  %>
									<td><%= text_field_tag "match_scores[#{match.id}]", match.score, disabled: true %></td>
								<% end %>
								<td>
								<% if current_user.admin? %>
									<%= datetime_field_tag "match_dates[#{match.id}]", match.date&.strftime('%Y-%m-%dT%H:%M'), class: "form-control datetime-picker", disabled: false, style: "font-size: small;" %>
								<% else  %>
									<%= datetime_field_tag "match_dates[#{match.id}]", match.date&.strftime('%Y-%m-%dT%H:%M'), class: "form-control datetime-picker", disabled: true, style: "font-size: small;" %>
								<% end %>
          			</td>
								<% if current_user.admin? %>
									<td><%= submit_tag "Submit", class: "btn btn-sm tiny-button", style: "background-color: #53B092;" %></td>
								<% else %>
									<td>-</td>
								<% end %>
							</tr>
						<% end %>
						</tbody>
					</table>
				<% end %>
			<% end %>
		<% end %>
		</center>
		<br>
		<center>Qualificated Players
		<table class="tournament-table">
  <thead>
    <tr>
      <th>Group ID</th>
      <th>Registration ID</th>
    </tr>
  </thead>
  <tbody>
    <% @ids_with_most_winners.each do |group_id, registration_id| %>
      <tr>
        <td><%= group_id %></td>
				<% if registration_id.present? %>
        	<td><%= Registration.find(registration_id).user.username %></td>
				<%end%>
      </tr>
    <% end %>
  </tbody>
</table></center>

		
		<section id="bracket">
		<div class="container">
		<div class="split split-one">
			<div class="round round-one current">
				<div class="round-details">Round 1<br/><span class="date">March 16</span></div>
				<ul class="matchup">
					<li class="team team-top">Duke<span class="score">1</span></li>
					<li class="team team-bottom">Virginia<span class="score">2</span></li>
				</ul>
				<ul class="matchup">
					<li class="team team-top">Wake Forest<span class="score">3</span></li>
					<li class="team team-bottom">Clemson<span class="score">4</span></li>
				</ul>
				<ul class="matchup">
					<li class="team team-top">North Carolina<span class="score">5</span></li>
					<li class="team team-bottom">Florida State<span class="score">6</span></li>
				</ul>
				
			</div>  <!-- END ROUND ONE -->
	
			<div class="round round-two current">
				<div class="round-details">Round 2<br/><span class="date">March 18</span></div>     
				<ul class="matchup">
					<li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
					<li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
				</ul> 
				<ul class="matchup">
					<li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
					<li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
				</ul> 
	                
			</div>  <!-- END ROUND TWO -->
			
			<div class="round round-three current">
				<div class="round-details">Round 3<br/><span class="date">March 22</span></div>     
				<ul class="matchup">
					<li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
					<li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
				</ul>                   
			</div>  <!-- END ROUND THREE -->    
		</div> 
		</div>

	
	
</div>

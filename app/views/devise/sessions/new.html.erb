<div class = 'container py-5', style= "max-width: 540px">
<div class="login-card">
<div class="close-container">
<a href="/" class="btn-close" aria-label="Close"></a> <!-- Close button to go to the homepage -->
</div>
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="mb-3>
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.submit "Log in", class: 'btn btn-lg btn-twitter ',style: "font-size: 15px;" %>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>

<style>
    body {
      background-image: url('<%= asset_path('wall1.png') %>');
    }

    .login-card {
      max-width: 400px;
      margin: 100px auto;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Tiny shadow */
      padding: 20px;
      border-radius: 17px;
    }
    .close-container {
    position: relative;
    top: -11px;
    right: -360px;
  }

  .btn-close {
    color: #000; /* Change the color according to your design */
  }
  </style>

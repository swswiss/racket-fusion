<%= turbo_stream.replace dom_id(@tournament) do %>
	<% if @eligible == true %>
	<div class="alert alert-success alert-dismissible  show" role="alert" style="position: fixed; top: 10px; right: 10px; width: 350px; display: inline-block; id="flash-message"">
	<strong style="font-size: 12px;">Congrats!</strong><font style="font-size: 12px;">You just registered for <%=@tournament.name%> tournament.</font>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
		<%= render partial: "tournaments/tournament", locals: {tournament_presenter: TournamentPresenter.new(tournament: @tournament, current_user: current_user)} %>
	<% else %>
	<div class="alert alert-warning alert-dismissible  show" role="alert" style="position: fixed; top: 10px; right: 10px; width: 350px; display: inline-block; id="flash-message"">
	<strong style="font-size: 12px;">Nope!</strong><font style="font-size: 12px;">You are not eligible to play at this level.</font>
            	<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        	</div>
        	<%= render partial: "tournaments/tournament", locals: {tournament_presenter: TournamentPresenter.new(tournament: @tournament, current_user: current_user)} %>
	<% end %>
<%end%>



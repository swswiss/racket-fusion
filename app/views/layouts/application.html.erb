<!DOCTYPE html>
<html>
  <head>
    <title>RacketFusion</title>
    <%= csrf_meta_tags %>
    <%= turbo_include_tags %>

    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag 'trix' %>
    <%= javascript_include_tag 'trix' %>
    <%# wicked_pdf_stylesheet_link_tag "stylesheets/styles_brackets" %>
   
    <%= favicon_link_tag asset_path("tennis-court.png") %>
    <%= javascript_include_tag 'application' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <% if flash.any? %>
      <div class= "container" >
        <%= render "shared/flashes" %>
      </div>  
    <% end %>
    <% if user_signed_in? %>
      <% if controller_name == "usernames" %>
        <% if params[:action] == "index" %>
          <div class="container py-2">
            <div class= "row">
              <%= render "shared/sidebar" %>
              <%= yield %>
            </div>
          </div>
        <% else %>
          <%= yield %>
        <%end%>
      <% else %>
        <div class="container py-2 px-0">
          <div class= "row">
            <%= render "shared/sidebar" %>
            <%= yield %>
          </div>
        </div>
      <% end %>
      
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>

<aside class="col side-navbar">
	<div class: "d-flex align-items-center fs-5 px-3 mb-3" %>
		<%= image_tag "racket_fusion.webp", width: "125" %><span> </span>
	</div>

	<%= link_to dashboard_path, class: "d-flex align-items-center fs-5 mb-3" do %>
		<div class= "px-4 py-2 rounded-pill">
			<span class = "me-4 position-relative" style = "bottom: 3px;" ><%= image_tag "home.png", width: "27" %></span>
			Home
		</div>
	<% end %>

	<%= link_to dashboard_path, class: "d-flex align-items-center fs-5 mb-3" do %>
		<div class= "px-4 py-2 rounded-pill">
			<span class = "me-4 position-relative" style = "bottom: 3px;" ><%= image_tag "notification.png", width: "27" %></span>
			Notifications
		</div>
	<% end %>

	<%= link_to dashboard_path, class: "d-flex align-items-center fs-5 mb-3" do %>
		<div class= "px-4 py-2 rounded-pill">
			<span class = "me-4 position-relative" style = "bottom: 3px;" ><%= image_tag "bookmark.png", width: "27" %></span>
			Bookmarks
		</div>
	<% end %>

	<%= link_to new_username_path, class: "d-flex align-items-center fs-5 mb-3" do %>
		<div class= "px-4 py-2 rounded-pill">
			<span class = "me-4 position-relative" style = "bottom: 3px;" ><%= image_tag "user.png", width: "27" %></span>
			Profile
		</div>
	<% end %>

	<%= link_to tournaments_path, class: "d-flex align-items-center fs-5 mb-3" do %>
		<div class= "px-4 py-2 rounded-pill">
			<span class = "me-4 position-relative" style = "bottom: 3px;" ><%= image_tag "tennis-c.png", width: "27" %></span>
			Events
		</div>
	<% end %>

	<% if current_user.admin? %>
		<center><div class= "px-4 py-0 rounded-pill">
			<span class = "me-4 position-relative" style = "bottom: 3px;" >--------<%= image_tag "manager.png", width: "45" %>--------</span>
		</div></center>

		<%= link_to dashboard_path, class: "d-flex align-items-center fs-5 mb-3", data: { bs_toggle: "modal", bs_target: "#creat_tour" } do %>
			<div class= "px-4 py-2 rounded-pill">
				<span class = "me-4 position-relative" style = "bottom: 3px;"><%= image_tag "tournament.png", width: "27" %></span>
				Creat Event
			</div>
		<% end %>
	<% end %>

	<div class = "d-flex align-items-center fs-4 px-4 mb-3" >
		<%= button_tag "Tweet", class: "btn btn-lg btn-twitter w-100 rounded-pill", data: { "bs-toggle": "modal", "bs-target": "#exampleModal" } %>
	</div>

	<div class = "d-flex align-items-center fs-6  px-4 ">
		<%= link_to "Log Out", destroy_user_session_path, data: {"turbo-method": :delete}, class: 'twitter-link' %>
	</div>
</aside>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close mx-0" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
				<%= render "shared/tweet_form" %>
      </div>
      
    </div>
  </div>
</div>

<div class="modal fade" id="creat_tour" tabindex="-1" aria-labelledby="creat_tour" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close mx-0" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
				<%= render "shared/tournament_form" %>
      </div>
      
    </div>
  </div>
</div>